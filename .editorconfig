[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = tab
indent_size = 4

[{*.ng, *.sht, *.html, *.shtm, *.shtml, *.htm}]
indent_style = tab
tab_width = 4

[{*.mod, *.dtd, *.ent, *.elt}]
indent_style = tab
tab_width = 4

[{*.jhm, *.xslt, *.xul, *.rng, *.xsl, *.xsd, *.ant, *.tld, *.fxml, *.jrxml, *.xml, *.jnlp, *.wsdl, *.pom}]
indent_style = tab
tab_width = 4

[*.java]
indent_style = tab
tab_width = 4

[*.css]
indent_style = tab
tab_width = 4

[*.js]
indent_style = tab
tab_width = 4

[{*.kts, *.kt}]
indent_style = tab
tab_width = 4

[{*.yml, *.yaml}]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2
